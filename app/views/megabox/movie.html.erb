	<div class="container">
		<div class="row" style="color: #fff;">
			<% @movies.each do |movie| %>
				<a href="/megabox/show/<%= movie.id %>">
					<div class="col-3">
						<div class="card text-bg-dark">
						  <img src="<%= url_for(movie.movie_img) %>" class="card-img" alt="...">
						  <div class="card-img-overlay">
							<h5 class="card-title"><%= movie.movie_title %></h5>
							<p class="card-text" style="  overflow: hidden; text-overflow: ellipsis; white-space: nowrap; word-break:break-all;
  width: 100px; height: 50px;"><%= movie.movie_desc %></p>
							<p class="card-text"><small>Last updated 3 mins ago</small></p>
						  </div>
						</div>
						<button>
							<a href="/megabox/ticket_order">예매</a>
						</button>
					</div>
				</a>
			<% end %>	
