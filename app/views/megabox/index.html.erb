<head>
	<%= stylesheet_link_tag "megabox" %>
	<script src="https://kit.fontawesome.com/92ee59bde0.js" crossorigin="anonymous"></script>
</head>

<div style="background: linear-gradient(to right, rgba(15,12,1,1) 0%, rgba(23,17,1,0) 50%, rgba(15,12,1,1) 100%); background-color:#444;">
	<div class="text-white"style="background:url(https://www.megabox.co.kr/static/pc/images/movie/bg-movie-detail-pattern.png) repeat 0 0;">
		<h3 id="main_tit" class="text-white title" style="text-align: center; padding-top: 100px; font-size:25px;">
			박스오피스
		</h3>

		<div class="container mt-5">
				<div class="row" style="color: #fff;">
					<% @movies.each do |movie| %>
							<div class="col-3">
								<a href="/megabox/show/<%= movie.id %>">
								<div class="card text-bg-dark">
								  <img src="<%= url_for(movie.movie_img) %>" class="card-img" alt="...">
								  <div class="card-img-overlay" style="height:220px;">
									  <div class="card-main">
										<h5 class="card-title"><%= movie.movie_title %></h5>
										<p class="card-text"><div class="card-desc"><%= movie.movie_desc %></div></p>					  	
									  </div>
								  </div>
								</div>
								</a>
								<button class="btn btn-primary mt-1 w-100">
									<a href="/ticketings" class = "btn btn-primary w-100">예매</a>
								</button>
							</div>
					<% end %>	
			</div>
		</div>

		<div class = "container col-11" style="background-color: rgba(0,0,0,0.2);">
			<div class="search-link">
				<div class="cell col-3">
					<div class="search">
						<input type="text" placeholder="영화명을 입력해 주세요" title="영화 검색" class="input-text" id="movieName">
						<button type="button" class="btn" id="btnSearch"><i class="fa-solid fa-magnifying-glass"></i></button>
					</div>
				</div>

				<div class="cell col-3" id = afs><a href="#" title="상영시간표 보기"><i class="fa-regular fa-calendar-days"></i> 상영시간표</a></div>
				<div class="cell col-3" id = afs><a href="#" title="박스오피스 보기"><i class="fa-solid fa-film"></i> 박스오피스</a></div>
				<div class="cell col-3" id = afs><a href="#" title="빠른예매 보기"><i class="fa-solid fa-ticket"></i> 빠른예매</a></div>
			</div>
		</div>	
	</div>
</div>


<!-- 혜택 -->
<div class="container">
	<div class="row" >
		<div class="col-12 mt-5">
			<h1>
				혜택
			</h1>
		</div>
		
		<!-- 광고 슬라이드 -->
		<div class="col-7">
			<div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
			  <div class="carousel-inner">
				<div class="carousel-item active" data-bs-interval="10000">
				  <img src="<%= asset_path("ad.jpg") %>" class="d-block w-100" alt="...">
				</div>
				<div class="carousel-item" data-bs-interval="2000">
				  <img src="<%= asset_path("ad2.jpg") %>" class="d-block w-100" alt="...">
				</div>
				<div class="carousel-item">
				  <img src="<%= asset_path("ad3.jpg") %>" class="d-block w-100" alt="...">
				</div>
			  </div>
			  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Previous</span>
			  </button>
			  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Next</span>
			  </button>
			</div>
		</div>
		
		<div class="col-5">
			<img src="<%= asset_path("ad4.jpg") %>" class="rounded float-end" alt="...">
		</div>
		
	</div>
</div>